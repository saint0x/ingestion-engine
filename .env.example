# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4

# Auth Service Configuration (TS Daemon)
# Use "mock" for local development without auth service
# Production: http://auth-service:8080
INGESTION_AUTH_URL=mock

# Kafka/Redpanda Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_BATCH_SIZE=1000
KAFKA_BATCH_TIMEOUT_MS=100
KAFKA_COMPRESSION=lz4

# ClickHouse Configuration
# Local development: http://localhost:8123
# TS Daemon Cloud: https://falv26gj8y.us-east-2.aws.clickhouse.cloud:8443
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=overwatch
CLICKHOUSE_POOL_SIZE=10

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SEC=10000
RATE_LIMIT_BURST_SIZE=50000

# Retention Policies
RETENTION_FREE_TIER_HOURS=24
RETENTION_PAID_TIER_DAYS=90

# Logging
RUST_LOG=info,ingestion_engine=debug,tower_http=debug
