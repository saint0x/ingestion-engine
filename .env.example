# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4

# Kafka/Redpanda Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_BATCH_SIZE=1000
KAFKA_BATCH_TIMEOUT_MS=100
KAFKA_COMPRESSION=lz4

# ClickHouse Configuration
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=overwatch
CLICKHOUSE_POOL_SIZE=10

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SEC=10000
RATE_LIMIT_BURST_SIZE=50000

# Retention Policies
RETENTION_FREE_TIER_HOURS=24
RETENTION_PAID_TIER_DAYS=90

# Logging
RUST_LOG=info,ingestion_engine=debug,tower_http=debug
